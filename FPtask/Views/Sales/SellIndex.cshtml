@model IEnumerable<FPtask.Models.SellViewModel>

@{
    ViewBag.Title = "Sell";
    
}

<h2>Sell Shares</h2>






<p class="lead">Last Price Update: <span id="PublicationDate"  ></span></p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountAvailableForUser)
        </th>

        <th>
            Price of 1 Share (PLN)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountAvailableForUser)
            </td>


            <td>
                <span id="@(  item.Code )_price"></span> 
            </td>


            <td>
                @Html.ActionLink("Sell Now!", "Sell",   new { ShareId = @item.ShareId })

            </td>
        </tr>
    }

</table>
